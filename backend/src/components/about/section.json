{
  "collectionName": "components_about_sections",
  "info": {
    "displayName": "About Section",
    "description": "A content section with title, rich text content, and optional image"
  },
  "options": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "graphic": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "graphicPosition": {
      "type": "enumeration",
      "enum": [
        "left",
        "right"
      ],
      "default": "left",
      "required": true
    }
  }
}